@model IEnumerable<MayaJapan.Models.ImageGroup>

@{
    ViewBag.Title = "Index";
    @Styles.Render("~/Content/imagegroup.css");
    @Scripts.Render("~/Scripts/imageGroupImages.js");
}

<h2>That time when I...</h2>

<div class="wrapper">
    
    @foreach (var item in Model.Reverse())
    {
        // Show the most recent items first!    
        <div class="image-group-container row">
            <div class="col-md-6 image-group-preview">
                <span class="image-group-title">@item.Name</span>
                <span class="image-group-description">@item.Description</span>
                @foreach(var image in item.ImageValue)
                {
                    <img src="@image.ImageUrl" onclick="clickThumbnail(this)" />
                }
            </div>
            <div class="col-md-6 image-group-highlight-image">
                <img class="image-group-highlight" src="@item.ImageValue.FirstOrDefault().ImageUrl" />
            </div>
        </div>
        <hr />
    }
    </div>


